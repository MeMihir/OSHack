<% include ../partials/header.ejs %>

<div class="d-flex justify-content-center">
    <div>
        <h1>Sign Up</h1>
        <form action="/signup" method="post" style="max-width: 30rem;">
            
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" >First Name</span>
                </div>
                <input type="text" name="user[fname]" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                <div class="input-group-prepend">
                    <span class="input-group-text" >Last Name</span>
                </div>
                <input type="text" name="user[lname]" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
    
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" >Email</span>
                </div>
                <input type="email" name="user[email]" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
    
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" >Username</span>
                </div>
                <input type="text" name="user[username]" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                <div class="input-group-prepend">
                    <span class="input-group-text">password</span>
                </div>
                <input type="password" name="password" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" >Occupation</span>
                </div>
                <input type="text" name="user[occupation]" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                <div class="input-group-prepend">
                    <span class="input-group-text" >Location</span>
                </div>
                <input type="text" name="user[location]" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>

            <button type="submit" class="btn btn-outline-success btn-md mb-3 btn-block">Sign Up</button>
        </form>
        <div><a href="/spots" class="btn btn-primary btn-sm mt-2">BACK</a></div>
    </div>
</div>
    
<% include ../partials/footer.ejs %>
    